<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark">
    >
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:background="@drawable/bgbtncancel"
        android:elevation="3dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:background="@mipmap/ic_launcher"/>
        <EditText
            android:id="@+id/login_username"
            android:inputType="text"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:textColorHint="@color/secondaryBlack"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Username"
            android:maxLength="30"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_gravity="center"/>
        <EditText
            android:id="@+id/login_pin"
            android:inputType="numberPassword"
            android:background="@drawable/bginputtask"
            android:paddingLeft="12dp"
            android:textColorHint="@color/secondaryBlack"
            android:textColor="@color/colorPrimaryDark"
            android:hint="Enter 4 digit PIN"
            android:maxLength="4"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_width="250dp"
            android:layout_height="55dp"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btn_login"
            android:layout_marginTop="20dp"
            android:text="Login "
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:background="@drawable/btn_edit"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:stateListAnimator="@null"
            />
        <TextView
            android:padding="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Forgot Pin?"
            android:textAlignment="center"
            android:textColor="#0B942C"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="end"
            android:id="@+id/forgot_password"
            />

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:text="Not Yet Registerd? Click Here."
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            />
    </LinearLayout>
</LinearLayout>
</ScrollView>
